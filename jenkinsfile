pipeline {
    agent any
	
	  tools
    {
       maven "Maven"
    }
 stages {
      stage('checkout') {
           steps {
             
                git branch: 'master', url: 'https://github.com/devops4solutions/CI-CD-using-Docker.git'
             
          }
        }
	 stage('Execute Maven') {
           steps {
             
                sh 'mvn package'             
          }
        }
        

  stage('Docker Build and Tag') {
           steps {
              
                sh 'docker build . -t todo-app' 
                sh 'docker tag samplewebapp sumitroyyy/todo-app:latest'
                //sh 'docker tag samplewebapp sumitroyyy/todo-app:$BUILD_NUMBER'
               
          }
        }
     
  
     
      stage('Run Docker container on Jenkins Agent') {
             
            steps 
			{
                sh "docker run -d -p 8000:8000 todo-app"
 
            }
        }
 stage('Run Docker container on remote hosts') {
             
            steps {
                sh "docker -H ssh://jenkins@18.144.86.77 run -d -p 8000:8000 todo-app"
 
            }
        }
    }
	}
    
