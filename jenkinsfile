pipeline {
    agent any
   
    }
 stages {stages {
      stage('checkout') {
           steps {
             
                git branch: 'develop', url: 'https://github.com/https://github.com/sumitroyyy/Django-todo-CICD'
             
          }
        }
stages {
      stage('build') {
           steps {
	   sh """
	     docker build -t todo-app .
	   """ 
                        
          }
        }
        
	stage('build') {
           steps {
	     sh """
	       docker run -d -p 8000:8000 todo-app
	      """
	   }
	 }  
 stage('Run Docker container on remote hosts') {
             
            steps {
                sh "docker -H ssh://jenkins@18.144.86.77 run -d -p 8000:8000 todo-app"
 
            }
        }
    }
 }
}
   }
 
    
